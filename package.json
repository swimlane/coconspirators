{
  "name": "coconspirators",
  "version": "5.0.0",
  "description": "RabbitMQ Message Bus Library for TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha --require ts-node/register ./tests/**/*.spec.ts -R spec --bail",
    "test:cov": "nyc npm run test:unit",
    "test:report": "cat ./coverage/lcov.info | codacy-coverage --language typescript",
    "lint": "tslint ./{src,tests}/{,**/}*.ts",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swimlane/coconspirators.git"
  },
  "keywords": [
    "rabbitmq",
    "amqplib",
    "ampq",
    "pubsub",
    "messagebus",
    "queue",
    "typescript"
  ],
  "author": "Swimlane <dev@swimlane.com>",
  "contributors": [
    "Austin McDaniel",
    "Shaun Burdick"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swimlane/coconspirators/issues"
  },
  "homepage": "https://github.com/swimlane/coconspirators#readme",
  "devDependencies": {
    "@types/amqplib": "^0.5.6",
    "@types/chai": "^4.1.0",
    "@types/mocha": "^5.0.0",
    "@types/node": "^8.10.8",
    "@types/retry": "^0.10.1",
    "@types/shortid": "0.0.29",
    "chai": "^4.1.2",
    "codacy-coverage": "^2.0.3",
    "mocha": "^5.1.0",
    "nyc": "^11.4.1",
    "reflect-metadata": "^0.1.10",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-swimlane": "^3.0.4",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "amqplib": "^0.5.1",
    "retry": "^0.12.0",
    "shortid": "^2.2.6"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.10"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/*.d.ts",
      "src/**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "all": true
  }
}
